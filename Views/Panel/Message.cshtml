</html>
<script>
    document.getElementById("btn-reveal").addEventListener('click', function () {
        let el = document.getElementById('reveal-content');
        if (el.classList.contains('hide')) {
            el.classList.remove('hide');
        } else {
            el.classList.add('hide');
        }
    });
</script>