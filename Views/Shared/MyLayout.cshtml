
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/StatsComponent/css/style.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 160px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #A51212;
                    text-decoration: none;
                }

        .main {
            margin-left: 160px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"><i class="bi bi-house"></i> Ana Sayfa</a>
        <a href="/Category/Index"><i class="bi bi-list"></i> Kategoriler</a>
        <a href="/Book/Index"><i class="bi bi-book"></i> Kitaplar</a>
        <a href="/Writer/Index"><i class="bi bi-pencil"></i> Yazarlar</a>
        <a href="/Member/Index"><i class="bi bi-people"></i> Kullanıcılar</a>
        <a href="/Employee/Index"><i class="bi bi-person-workspace"></i> Personeller</a>
        <a href="/Loan/GiveBook"><i class="bi bi-arrow-right"></i> Kitap Ver</a>
        <a href="/Loan/MovementList"><i class="bi bi-arrow-left"></i> Kitap Al</a>
        <a href="#"><i class="bi bi-cash"></i> Kasa</a>
        <a href="/Process/Index"><i class="bi bi-activity"></i> İşlemler</a>
        <a href="/Process/Index"><i class="bi bi-archive"></i> Cezalar</a>
        <a href="/Statistics/Index"><i class="bi bi-bar-chart-line-fill"></i> İstatistikler</a>
        <a href="#"><i class="bi bi-gear-fill"></i> Ayarlar</a>
        <a href="#"><i class="bi bi-question"></i> Yardım</a>
        <a href="#"><i class="bi bi-x"></i> Çıkış</a>
    </div>
    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

